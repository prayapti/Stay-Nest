<% layout("layouts/boilerplate") %>

<body>
  <h3 class="text-center mt-4 mb-4">All Listings</h3>

  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 g-4 px-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm listing-card">
            <div class="position-relative">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;" />
              <div class="card-image-overlay">abcd</div>
            </div>

            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br />
                â‚¹ <%= listing.price.toLocaleString("en-IN") %> <span class="text-muted">/per night</span>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>
